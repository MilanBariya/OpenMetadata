{
  "$id": "https://open-metadata.org/schema/entity/services/connections/database/hiveConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HiveConnection",
  "description": "Hive SQL Connection Config",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.database.HiveConnection",
  "definitions": {
    "hiveType": {
      "description": "Service type.",
      "type": "string",
      "enum": [
        "Hive"
      ],
      "default": "Hive"
    },
    "hiveScheme": {
      "description": "SQLAlchemy driver scheme options.",
      "type": "string",
      "enum": [
        "hive",
        "hive+http",
        "hive+https",
        "impala",
        "impala4"
      ],
      "default": "hive"
    }
  },
  "properties": {
    "type": {
      "title": "Service Type",
      "description": "Service Type",
      "$ref": "#/definitions/hiveType",
      "default": "Hive"
    },
    "scheme": {
      "title": "Connection Scheme",
      "$ref": "#/definitions/hiveScheme",
      "default": "hive"
    },
    "username": {
      "title": "Username",
      "type": "string"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "format": "password"
    },
    "hostPort": {
      "title": "Host and Port",
      "type": "string"
    },
    "auth": {
      "title": "Authentication Mode",
      "type": "string"
    },
    "kerberosServiceName": {
      "title": "Kerberos Service Name",
      "type": "string"
    },
    "databaseSchema": {
      "title": "databaseSchema",
      "type": "string"
    },
    "databaseName": {
      "title": "Database Name",
      "type": "string"
    },
    "authOptions": {
      "title": "URL Authentication Options",
      "type": "string"
    },
    "connectionOptions": {
      "title": "Connection Options",
      "$ref": "../connectionBasicType.json#/definitions/connectionOptions"
    },
    "connectionArguments": {
      "title": "Connection Arguments",
      "$ref": "../connectionBasicType.json#/definitions/connectionArguments"
    },
    "supportsMetadataExtraction": {
      "title": "Supports Metadata Extraction",
      "$ref": "../connectionBasicType.json#/definitions/supportsMetadataExtraction"
    },
    "supportsDBTExtraction": {
      "$ref": "../connectionBasicType.json#/definitions/supportsDBTExtraction"
    },
    "supportsProfiler": {
      "title": "Supports Profiler",
      "$ref": "../connectionBasicType.json#/definitions/supportsProfiler"
    }
  },
  "additionalProperties": false,
  "required": [
    "hostPort"
  ]
}